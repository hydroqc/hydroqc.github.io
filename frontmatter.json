{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "boolean"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "linkTitle",
          "name": "linkTitle",
          "type": "string"
        },
        {
          "title": "weight",
          "name": "weight",
          "type": "number"
        },
        {
          "title": "aliases",
          "name": "aliases",
          "type": "choice",
          "choices": [
            "/en/docs/configuration/home-assistant-specific/"
          ]
        },
        {
          "title": "lastmod",
          "name": "lastmod",
          "type": "datetime"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "hugo",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.content.pageFolders": [
    {
      "title": "Multilingual",
      "path": "[[workspace]]/content",
      "filePrefix": "",
      "defaultLocale": "fr",
      "locales": [
        {
          "title": "Fran√ßais",
          "locale": "fr",
          "path": "fr",
        },
        {
          "title": "English",
          "locale": "en",
          "path": "en"
        }
      ]
    }
  ]
}
